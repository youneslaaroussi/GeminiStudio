# Optional override for the chat model id
AI_CHAT_GOOGLE_MODEL=gemini-3-pro-preview

# Google Gemini API key (used by @ai-sdk/google)
GOOGLE_GENERATIVE_AI_API_KEY=your-google-api-key

# Vertex AI Veo 3 configuration
VEO_PROJECT_ID=your-gcp-project-id
VEO_LOCATION=us-central1
VEO_MODEL_ID=veo-3.0-generate-001
# Provide a path (relative to the project root or absolute) to the service-account JSON with Vertex AI permissions
VEO_SERVICE_ACCOUNT_KEY=./secrets/veo-service-account.json

# Google Cloud Speech-to-Text configuration
SPEECH_PROJECT_ID=your-gcp-project-id
SPEECH_LOCATION=global
SPEECH_RECOGNIZER_ID=_
SPEECH_MODEL=chirp_3
SPEECH_LANGUAGE_CODES=en-US
SPEECH_GCS_BUCKET=your-speech-bucket
# Optional: override the shared Google service account (path relative to project root or absolute)
SPEECH_SERVICE_ACCOUNT_KEY=./secrets/speech-service-account.json

# Google Cloud Storage for asset uploads and Video Intelligence API
ASSET_GCS_BUCKET=your-gcs-asset-bucket
# Optional: lifetime (in seconds) for generated signed URLs (default 7 days)
ASSET_SIGNED_URL_TTL_SECONDS=604800
# Optional override for the Gemini Banana Pro model id
BANANA_MODEL_ID=gemini-3-pro-image-preview

# Optional override for the prompt generator model id
PROMPT_MODEL_ID=gemini-1.5-flash-latest
