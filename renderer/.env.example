PORT=4000
REDIS_URL=redis://127.0.0.1:6379
RENDERER_CONCURRENCY=10
RENDERER_HEADLESS_CONCURRENCY=10
RENDERER_TMP_DIR=/tmp/gemini-renderer
LOG_LEVEL=info
# Optional: set if Chrome is already installed locally
PUPPETEER_EXECUTABLE_PATH=/Applications/Google\ Chrome.app/Contents/MacOS/Google\ Chrome
# Run Chrome in headless mode (set to false for local debugging)
RENDERER_HEADLESS=true
# Google Cloud project (used for Pub/Sub publishing)
GOOGLE_PROJECT_ID=your-gcp-project-id
# Pub/Sub topic for render lifecycle events (name or full path)
RENDERER_EVENT_TOPIC=gemini-render-events
# Task timeout for each segment render in milliseconds (default: 600000 = 10 minutes)
RENDERER_TASK_TIMEOUT_MS=600000
# Render limits - hard caps on render settings
RENDERER_MAX_FPS=30
RENDERER_MAX_RESOLUTION=1280
RENDERER_MAX_DURATION=30
RENDERER_MAX_QUALITY=web
# Comma-separated hosts the headless browser may request (e.g. asset CDN). Same-origin is always allowed. Example: storage.googleapis.com,*.googleapis.com
HEADLESS_ALLOWED_REQUEST_HOSTS=storage.googleapis.com
SCENE_COMPILER_URL=http://localhost:5500