rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && userId == request.auth.uid;
    }

    function isCollaborator(userId, projectId) {
      let project = get(/databases/$(database)/documents/users/$(userId)/projects/$(projectId));
      return project.data.collaborators != null && request.auth.uid in project.data.collaborators;
    }

    function canAccessProject(userId, projectId) {
      return isOwner(userId) || isCollaborator(userId, projectId);
    }

    // User settings (integrations, preferences)
    match /users/{userId}/settings/{settingId} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
    }

    // Chat sessions
    match /users/{userId}/chatSessions/{sessionId} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
    }

    // Telegram link codes - users can create/read/delete codes for themselves
    match /telegramLinkCodes/{code} {
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && (resource == null || resource.data.userId == request.auth.uid);
    }

    // Telegram integrations reverse lookup - users can delete their own entry
    match /telegramIntegrations/{chatId} {
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // User-specific project documents
    match /users/{userId}/projects/{projectId} {
      // Owner and collaborators can read
      allow read: if canAccessProject(userId, projectId);

      // Only owner can create/update/delete project metadata
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);

      // Branch documents (sub-collection)
      match /branches/{branchId} {
        allow read: if canAccessProject(userId, projectId);
        allow write: if canAccessProject(userId, projectId);

        // Prevent deletion of main branch
        allow delete: if canAccessProject(userId, projectId) && branchId != 'main';

        // Branch head (latest state)
        match /head {
          allow read: if canAccessProject(userId, projectId);
          allow write: if canAccessProject(userId, projectId);
        }

        // Commit history
        match /commits/{commitId} {
          allow read: if canAccessProject(userId, projectId);
          allow create: if canAccessProject(userId, projectId);
          allow update: if false; // Commits are immutable
          allow delete: if false;
        }
      }

      // Recursively allow access to all nested documents
      match /{document=**} {
        allow read: if canAccessProject(userId, projectId);
        allow write: if canAccessProject(userId, projectId);
        allow delete: if canAccessProject(userId, projectId) && !(document.endsWith('main'));
      }
    }

    // Prevent access to other users' data
    match /users/{userId}/{document=**} {
      allow read, write: if false;
    }

    // Message feedback - server-side only, no client access
    match /messageFeedback/{feedbackId} {
      allow read, write: if false;
    }

    // Veo jobs - server-side only (admin SDK), no direct client access
    // Frontend accesses via /api/veo which uses admin SDK
    match /veoJobs/{jobId} {
      allow read, write: if false;
    }

    // Signup bonus claims - server-side only (billing service), fraud prevention
    match /signupBonusClaims/{email} {
      allow read, write: if false;
    }
  }
}
