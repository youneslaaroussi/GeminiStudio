# GeminiStudio Deployment Environment Variables
# Copy to .env and fill in your values

# ============================================
# REQUIRED: Google Cloud Configuration
# ============================================
GOOGLE_PROJECT_ID=your-gcp-project-id

# GCS bucket for assets (must exist)
ASSET_GCS_BUCKET=your-asset-bucket-name

# Gemini API key (get from https://aistudio.google.com/app/apikey)
GEMINI_API_KEY=your-gemini-api-key

# ============================================
# OPTIONAL: AI/ML Services
# ============================================

# Gemini model for asset analysis
GEMINI_MODEL_ID=gemini-3-pro-preview

# Speech-to-Text configuration
SPEECH_LOCATION=global
SPEECH_RECOGNIZER_ID=_
SPEECH_MODEL=chirp_3
SPEECH_LANGUAGE_CODES=en-US
SPEECH_GCS_BUCKET=  # Leave empty to use ASSET_GCS_BUCKET

# Vertex AI Veo (video generation)
VEO_LOCATION=us-central1
VEO_MODEL_ID=veo-3.0-generate-001

# Checkpoint storage bucket (leave empty to use ASSET_GCS_BUCKET)
CHECKPOINT_GCS_BUCKET=

# ============================================
# OPTIONAL: Third-Party Services
# ============================================

# Replicate (for video effects) - https://replicate.com/account/api-tokens
REPLICATE_API_TOKEN=

# CloudConvert (for HEIC conversion) - https://cloudconvert.com/api/v2
CLOUDCONVERT_API_KEY=

# Algolia (for asset search) - https://www.algolia.com/
ALGOLIA_APP_ID=
ALGOLIA_ADMIN_API_KEY=
ALGOLIA_INDEX_PREFIX=gemini_assets

# Stripe (for billing) - https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=
STRIPE_CREDITS_WEBHOOK_SECRET=
STRIPE_PRICE_STARTER=
STRIPE_PRICE_PRO=
STRIPE_PRICE_ENTERPRISE=

# ============================================
# OPTIONAL: Service Configuration
# ============================================

# Signed URL expiry (default: 7 days)
ASSET_SIGNED_URL_TTL_SECONDS=604800

# Pub/Sub topics
PIPELINE_EVENT_TOPIC=gemini-pipeline-events
RENDER_EVENT_TOPIC=gemini-render-events
VEO_EVENT_TOPIC=gemini-veo-events

# Renderer configuration
RENDERER_CONCURRENCY=2
RENDERER_HEADLESS_CONCURRENCY=2
RENDERER_TASK_TIMEOUT_MS=600000
LOG_LEVEL=info

# HMAC secrets for service-to-service auth (generate with: openssl rand -hex 32)
ASSET_SERVICE_SHARED_SECRET=
RENDERER_SHARED_SECRET=

# Frontend URL (for CORS)
FRONTEND_URL=https://your-vercel-app.vercel.app
CORS_ORIGIN=https://your-vercel-app.vercel.app

# Debug mode
DEBUG=false
